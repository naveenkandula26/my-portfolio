{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Set to false if type errors persist
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*", "*.ts", "*.tsx", "*.js"],
  "exclude": ["node_modules", "dist"]
}
